extends layout

block content

  h1 Category: #{category.name}
  p #{category.description}

  div(style='margin-left:20px;margin-top:20px')

    h4 Items

    dl
      each items in category_items
        dt
          a(href=items.url) #{items.name}
        dd #{items.description}

      else
        p This category has no items.
  hr
  p
    a(href=category.url+'/delete') Delete Category

